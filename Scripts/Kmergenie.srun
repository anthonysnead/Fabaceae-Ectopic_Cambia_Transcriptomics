# This is a sample script using a singularity image for kmergenie
#!/bin/bash

#SBATCH --job-name=KmergenieSingularity
#SBATCH --nodes=1
#SATTCH --tasks-per-node=1
#SBATCH --cpus-per-task=24
#SBATCH --mem=180GB
#SBATCH --time=24:00:00

module purge

# Read.Path represents a file that holds the paths to your trimmed reads

Reads=Read.Path

# Out.Path represents the path to your output directory

output_dir=Out.Path

singularity \
    --silent exec \
    kmergenie.sif \
     kmergenie \
     $Reads \
     -t 24 \
     -o $output_dir